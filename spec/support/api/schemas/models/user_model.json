{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "User Model",
  "description": "User Model",

  "type": "object",
  "required": ["id", "type", "links", "attributes", "relationships"],
  "properties": {
    "id": {
      "type": "string",
      "description": "The id of the user",
      "example": "ada"
    },
    "type": {
      "type": "string",
      "enum": ["users"],
      "description": "The type of the user. This is always \"users\".",
      "example": "users"
    },
    "links": {
      "type": "object",
      "required": ["self"],
      "properties": {
        "self": {
          "type": "uri",
          "description": "A link to this resource",
          "example": "http://localhost:3000/users/ada"
        }
      }
    },
    "attributes": {
      "type": "object",
      "required": ["display_name", "email"],
      "properties": {
        "display_name": {
          "oneOf": [
            {
              "type": "string",
              "description": "The name of the user as it should be displayed",
              "example": "Ada Lovelace"
            },
            {
              "type": "null",
              "description": "The name of the user as it should be displayed",
              "example": null
            }
          ]
        },
        "email": {
          "type": "string",
          "pattern": "[^@]+@[^@]+",
          "description": "The email of the user",
          "example": "ada@example.com"
        }
      }
    },
    "relationships": {
      "type": "object",
      "required": ["organizations", "repositories"],
      "properties": {
        "organizations": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "../relationships/organization_relationship.json"
              }
            }
          }
        },
        "repositories": {
          "type": "object",
          "required": ["links"],
          "properties": {
            "links": {
              "type": "object",
              "required": ["related"],
              "properties": {
                "related": {
                  "type": "uri",
                  "example": "http://localhost:3000/ada/repo1"
                }
              }
            }
          }
        }
      }
    }
  }
}
