{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Tree Model",
  "description": "Tree Model",

  "type": "object",
  "required": ["id", "type", "attributes", "links"],
  "properties": {
    "id": {
      "type": "string",
      "description": "The id of the tree. It always contains a full commit sha hash and is always a URL relative to the host address.",
      "example": "/ada/repo1/ref/2717d0608cb6b7ef0bfb4e76dbd79efcd6c550db/tree/documents"
    },
    "type": {
      "type": "string",
      "enum": ["trees"],
      "description": "The type of the resource. This is always \"trees\".",
      "example": "trees"
    },
    "attributes": {
      "type": "object",
      "required": ["entries", "path"],
      "properties": {
        "entries": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "path", "type"],
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the directory. This is the part of the `path` after the last `/`.",
                "example": "story.txt"
              },
              "path": {
                "type": "string",
                "description": "The full path of the directory relative to the repository root",
                "example": "documents/story.txt"
              },
              "type": {
                "type": "string",
                "enum": ["blobs", "trees"],
                "description": "The type of the entry in the directory. This can be `blobs` (file) or `trees` (directory).",
                "example": "blobs"
              }
            }
          }
        },
        "path": {
          "type": "string",
          "description": "The directory path relative to the repository root",
          "example": "documents"
        }
      }
    },
    "links": {
      "type": "object",
      "required": ["self"],
      "properties": {
        "self": {
          "type": "string",
          "format": "uri",
          "description": "A canonical URL to this resource",
          "example": "/ada/repo1/ref/2717d0608cb6b7ef0bfb4e76dbd79efcd6c550db/tree/documents"
        }
      }
    }
  }
}
