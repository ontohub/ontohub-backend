{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Version Model",
  "description": "Version Model",

  "type": "object",
  "required": ["id", "type"],
  "properties": {
    "id": {
      "type": "string",
      "enum": ["version"],
      "description": "The id of the version data. This is always \"version\".",
      "example": "version"
    },
    "type": {
      "type": "string",
      "enum": ["versions"],
      "description": "The type of the version data. This is always \"versions\".",
      "example": "versions"
    },
    "attributes": {
      "type": "object",
      "required": ["commit", "tag", "full", "commits_since_tag"],
      "properties": {
        "commit": {
          "type": "string",
          "description": "The shortened sha hash of the commit.",
          "example": "21e9779"
        },
        "tag": {
          "type": "string",
          "description": "The latest release tag of the running version.",
          "example": "0.0.0"
        },
        "full": {
          "type": "string",
          "description": "The full output of git describe",
          "example": "0.0.0-65-g21e9779"
        },
        "commits_since_tag": {
          "type": "integer",
          "minimum": 0,
          "description": "The number of commits on top of the latest tag",
          "example": 2
        }
      }
    }
  }
}
