{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Organization Model",
  "description": "Organization Model",

  "type": "object",
  "required": ["id", "type", "links", "attributes", "relationships"],
  "properties": {
    "id": {
      "type": "string",
      "description": "The id of the organization",
      "example": "seed-users"
    },
    "type": {
      "type": "string",
      "enum": ["organizations"],
      "description": "The type of the organization. This is always \"organizations\".",
      "example": "organizations"
    },
    "links": {
      "type": "object",
      "required": ["self"],
      "properties": {
        "self": {
          "type": "uri",
          "description": "A link to this resource",
          "example": "http://localhost:3000/organizations/seed-users"
        }
      }
    },
    "attributes": {
      "type": "object",
      "required": ["display_name", "description"],
      "properties": {
        "display_name": {
          "type": "string",
          "description": "The name of the organization as it should be displayed",
          "example": "Seed Users"
        },
        "description": {
          "type": "string",
          "description": "A short description of the organization",
          "example": "All users that have been created in the seeds"
        }
      }
    },
    "relationships": {
      "type": "object",
      "required": ["members", "repositories"],
      "properties": {
        "members": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "../relationships/user_relationship.json"
              }
            }
          }
        },
        "repositories": {
          "type": "object",
          "required": ["links"],
          "properties": {
            "links": {
              "type": "object",
              "required": ["related"],
              "properties": {
                "related": {
                  "type": "uri",
                  "example": "http://localhost:3000/seed-users/repo2"
                }
              }
            }
          }
        }
      }
    }
  }
}
