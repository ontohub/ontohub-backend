{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Search Model",
  "description": "Search Model",

  "type": "object",
  "required": ["id", "type", "attributes", "relationships"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^searchresult$"
    },
    "type": {"type": "string"},
    "attributes": {
      "type": "object",
      "required": ["results_count", "repositories_count", "organizational_units_count"],
      "properties": {
        "results_count": {"type": "integer"},
        "repositories_count": {"type": "integer"},
        "organizational_units_count": {"type": "integer"}
      }
    },
    "relationships": {
      "type": "object",
      "required": ["repositories", "organizational_units"],
      "properties": {
        "repositories": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "type"],
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^[A-Za-z0-9_\\-]+/[A-Za-z0-9_\\-]+$"
                  },
                  "type": {
                    "type": "string",
                    "pattern": "^repositories$"
                  }
                }
              }
            }
          }
        },
        "organizational_units": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "type"],
                "properties": {
                  "id": {"type": "string"},
                  "type": {
                    "type": "string",
                    "pattern": "^(users)|(organizations)$"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
