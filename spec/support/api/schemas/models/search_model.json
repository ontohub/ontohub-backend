{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Search Model",
  "description": "Search Model",

  "type": "object",
  "required": ["id", "type", "attributes", "relationships"],
  "properties": {
    "id": {
      "type": "string",
      "enum": ["searchresult"],
      "description": "The id of the search data. This is always \"searchresult\".",
      "example": "searchresult"
    },
    "type": {
      "type": "string",
      "enum": ["search_results"],
      "description": "The type of the search data. This is always \"search_results\".",
      "example": "search_results"
    },
    "attributes": {
      "type": "object",
      "required": ["results_count", "repositories_count", "organizational_units_count"],
      "properties": {
        "results_count": {
          "type": "integer",
          "description": "The number of search results",
          "example": 2
        },
        "repositories_count": {
          "type": "integer",
          "description": "The number of repositories in the search results",
          "example": 1
        },
        "organizational_units_count": {
          "type": "integer",
          "description": "The number of organizational units in the search results",
          "example": 1
        }
      }
    },
    "relationships": {
      "type": "object",
      "required": ["repositories", "organizational_units"],
      "properties": {
        "repositories": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "type"],
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^[A-Za-z0-9_\\-]+/[A-Za-z0-9_\\-]+$",
                    "description": "The ID of the repository",
                    "example": "ada/repo1"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["repositories"],
                    "example": "repositories"
                  }
                }
              }
            }
          }
        },
        "organizational_units": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "type"],
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "The ID of the user",
                    "example": "ada"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["users", "organizations"],
                    "example": "users"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
