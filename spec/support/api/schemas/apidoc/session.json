{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Session",
  "description": "Endpoint to sign in a registered user",

  "type": {"$ref": "../models/session_model.json#/type"},
  "required": {"$ref": "../models/session_model.json#/required"},
  "properties": {"$ref": "../models/session_model.json#/properties"},

  "links": [
    {
      "title": "Sign In",
      "description": "Sign in as a user. Signing out is achieved by the client forgetting the token that the sign-in returns.",
      "rel": "self",
      "href": "/users/sign_in",
      "method": "POST",

      "requestHeaders": {
        "required": ["Content-Type"],
        "properties": {
          "Content-Type": {
            "enum": ["application/json"],
            "example": "application/json"
          }
        }
      },

      "schema": {
        "type": "object",
        "requried": ["user"],
        "properties": {
          "user": {
            "description": "The credentials of the user.",
            "type": "object",
            "required": ["name", "password"],
            "properties": {
              "name": {
                "type": "string",
                "description": "The name (id) of the user to sign in",
                "example": "ada"
              },
              "password": {
                "type": "string",
                "description": "The password of the user to sign in",
                "example": "changemenow"
              }
            }
          }
        }
      },
      "targetSchema": {"$ref": "../controllers/v2/users/sessions/post_create.json"}
    }
  ]
}
