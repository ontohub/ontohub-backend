{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "V3 Organizational Units",
  "description": "V3 Organizational Unit Controller",
  "definitions": {
    "id": {
      "type": "string",
      "example": "ada"
    }
  },
  "type": "object",
  "required": ["data"],
  "properties": {
    "data": {
      "type": "object",
      "required": ["organizationalUnit"],
      "properties": {
        "organizationalUnit": {
          "oneOf": [
            {
              "type": "object",
              "required": [
                "__typename",
                "displayName",
                "emailHash",
                "id",
                "organizations"
              ],
              "properties": {
                "__typename": {
                  "type": "string",
                  "enum": ["User"],
                  "example": "User"
                },
                "displayName": {
                  "type": "string",
                  "example": "Ada Lovelace"
                },
                "emailHash": {
                  "type": "string"
                },
                "id": {
                  "$ref": "#/definitions/id"
                },
                "organizations": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["id"],
                    "properties": {
                      "id": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            {
              "type": "object",
              "required": [
                "__typename",
                "description",
                "displayName",
                "id",
                "members"
              ],
              "properties": {
                "__typename": {
                  "type": "string",
                  "enum": ["Organization"]
                },
                "description": {
                  "type": "string"
                },
                "displayName": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "members": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["id"],
                    "properties": {
                      "id": {
                        "$ref": "#/definitions/id"
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      }
    }
  },
  "links": [
    {
      "title": "Show",
      "description": "Show the ontohub-backend version. Returns HTTP 200 (OK).",
      "rel": "self",
      "method": "GET",
      "mediaType": "application/json",
      "href": "/v3/{#/definitions/id}",
      "targetSchema": { "rel": "self" }
    }
  ]
}
