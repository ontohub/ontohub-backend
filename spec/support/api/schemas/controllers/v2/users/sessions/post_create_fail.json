{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "V2 Users Sessions Controller: POST/create/fail",
  "description": "V2 Users Sessions Controller: POST/create/fail",

  "type": "object",
  "required": ["errors"],
  "properties": {
    "errors": {
      "description": "The error messages on a failed sign in attempt",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["detail"],
        "properties": {
          "detail": {
            "type": "string",
            "enum": ["Invalid name or password."],
            "description": "The error message on a failed sign in attempt",
            "example": "Invalid name or password."
          }
        }
      }
    }
  }
}
