{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://apidoc.ontohub.org/controllers/v2/validation_error.json",
  "title": "Validation Error",
  "description": "Validation errors of resourceful controllers.",

  "type": "object",
  "required": ["errors"],
  "properties": {
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["detail", "source"],
        "properties": {
          "detail": {"type": "string"},
          "source": {
            "type": "object",
            "required": ["pointer"],
            "properties": {
              "pointer": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
