{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "repository_relationship_object.json",
  "title": "Repository Relationship Object",
  "description": "This is a schema for the Repository relationship object.",

  "definitions": {
    "repository": {
      "type": "object",
      "required": ["links"],
      "properties": {
        "links": {
          "type": "object",
          "required": ["self"],
          "properties": {
            "self": {
              "type": "uri",
              "pattern": "/[A-Za-z0-9_\-]+/[A-Za-z0-9_\-]+$"
            }
          }
        }
      }
    }
  }
}
