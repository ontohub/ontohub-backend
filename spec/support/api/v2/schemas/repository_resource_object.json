{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "repository_resource_object.json",
  "title": "Repository Resource Object",
  "description": "This is a schema for the Repository resource object.",

  "definitions": {
    "repository": {
      "type": "object",
      "required": ["id", "type", "links", "attributes", "relationships"],
      "properties": {
        "id": {"type": "string"},
        "type": {
          "type": "string",
          "pattern": "^repositories$"
        },
        "links": {
          "type": "object",
          "required": ["self"],
          "properties": {
            "self": {
              "type": "uri",
              "pattern": "/[A-Za-z0-9_\-]+/[A-Za-z0-9_\-]+$"
            }
          }
        },
        "attributes": {
          "type": "object",
          "required": ["name", "description", "content_type", "public_access"],
          "properties": {
            "name": {"type": "string"},
            "description": {"type": "string"},
            "content_type": {
              "type": "string",
              "pattern": "^(ontology|model|specification)$"
            },
            "public_access": {"type": "bool"}
          }
        },
        "relationships": {
          "type": "object",
          "required": ["namespace"],
          "properties": {
            "namespace": {
              "$ref": "namespace_relationship_object.json#definitions/namespace"
            }
          }
        }
      }
    }
  }
}
