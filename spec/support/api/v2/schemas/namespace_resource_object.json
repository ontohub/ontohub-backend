{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "namespace_resource_object.json",
  "title": "Namespace Resource Object",
  "description": "This is a schema for the Namespace resource object.",

  "definitions": {
    "namespace": {
      "type": "object",
      "required": ["id", "type", "links", "attributes", "relationships"],
      "properties": {
        "id": {"type": "string"},
        "type": {
          "type": "string",
          "pattern": "^namespaces$"
        },
        "links": {
          "type": "object",
          "required": ["self"],
          "properties": {
            "self": {"type": "uri"}
          }
        },
        "attributes": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {"type": "string"}
          }
        },
        "relationships": {
          "type": "object",
          "required": ["repositories"],
          "properties": {
            "repositories": {
              "$ref": "repository_relationship_object.json#definitions/repository"
            }
          }
        }
      }
    }
  }
}
