{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "namespace_relationship_object.json",
  "title": "Namespace Relationship Object",
  "description": "This is a schema for the Namespace relationship object.",

  "definitions": {
    "namespace": {
      "type": "object",
      "required": ["data", "links"],
      "properties": {
        "data": {
          "type": "object",
          "required": ["id", "type"],
          "properties": {
            "id": {"type": "string"},
            "type": {"type": "string"}
          }
        },
        "links": {
          "type": "object",
          "required": ["related"],
          "properties": {
            "related": {"type": "uri"}
          }
        }
      }
    }
  }
}
