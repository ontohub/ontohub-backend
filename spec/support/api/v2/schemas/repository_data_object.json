{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "repository_data_object.json",
  "title": "Repository Data Object",
  "description": "This is a schema for the Repository data object.",

  "definitions": {
    "repository": {
      "type": "object",
      "required": ["id", "type", "links", "attributes"],
      "properties": {
        "id": {"type": "string"},
        "type": {"type": "string"},
        "links": {
          "type": "object",
          "required": ["self"],
          "properties": {
            "self": {"type": "uri"}
          }
        },
        "attributes": {
          "type": "object",
          "required": ["slug", "name", "description"],
          "properties": {
            "slug": {"type": "string"},
            "name": {"type": "string"},
            "description": {"type": "string"}
          }
        }
      }
    }
  }
}
